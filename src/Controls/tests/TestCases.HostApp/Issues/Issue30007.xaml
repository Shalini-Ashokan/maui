<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Maui.Controls.Sample.Issues.Issue30007"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Line Drawing Stroke Extension Issue">
    <StackLayout Padding="20">
        <Label Text="This test demonstrates line drawing with stroke extension issue on Windows"
               FontSize="16"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />
        
        <Label Text="Expected: Lines should end exactly at the specified coordinates"
               FontSize="14"
               Margin="0,0,0,10" />
        
        <Label Text="Actual (Windows): Lines extend beyond endpoints by stroke width"
               FontSize="14"
               Margin="0,0,0,20" />

        <GraphicsView x:Name="LineTestGraphicsView"
                      AutomationId="LineTestGraphicsView"
                      HeightRequest="400"
                      WidthRequest="400"
                      BackgroundColor="White" />
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20,0,0">
            <Button x:Name="IncreaseStrokeButton"
                    AutomationId="IncreaseStrokeButton"
                    Text="Increase Stroke"
                    Clicked="OnIncreaseStrokeClicked" />
            <Button x:Name="DecreaseStrokeButton"
                    AutomationId="DecreaseStrokeButton"
                    Text="Decrease Stroke"
                    Clicked="OnDecreaseStrokeClicked" />
        </StackLayout>
        
        <Label x:Name="StrokeWidthLabel"
               AutomationId="StrokeWidthLabel"
               Text="Stroke Width: 1"
               HorizontalOptions="Center"
               FontSize="14"
               Margin="0,10,0,0" />
    </StackLayout>
</ContentPage>